  if (!db_field_exists('mp_service', 'mp_service')) {
    $new_field = array(
      'description' => 'last_cmd',
      'type' => 'varchar',
      'length' => 255,
      'not null' => TRUE,
      'default' => ''
    );
    db_add_field('mp_service', 'last_cmd', $new_field);
    $new_field = array(
      'description' => 'The Unix timestamp.',
      'type' => 'int',
      'not null' => TRUE,
      'default' => 0,
    );
    db_add_field('mp_service', 'last_cmd_timestamp', $new_field);
  }
}
